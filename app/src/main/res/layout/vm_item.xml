<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/VM_Os"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/os_ubuntu" />

    <TextView
        android:id="@+id/VM_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/VM1_Title"
        app:layout_constraintStart_toEndOf="@+id/VM_Os"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/VM_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter"
        android:text="@string/VM1_Location"
        android:textColor="#8E8E93"
        app:layout_constraintStart_toEndOf="@+id/VM_Os"
        app:layout_constraintTop_toBottomOf="@+id/VM_Title" />

    <ImageView
        android:id="@+id/VMCntrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/VM_Os"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/VM_Os"
        app:srcCompat="@drawable/run_btn" />

    <View
        android:id="@+id/VMdivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VM_Location" />

</androidx.constraintlayout.widget.ConstraintLayout>